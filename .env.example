# Environment variables for production deployment
NODE_ENV=production
PORT=5000

# WhatsApp Configuration
WA_SESSION_NAME=wa-bot-production
WA_TIMEOUT=60000

# Puppeteer arguments for Docker
WA_PUPPETEER_ARGS=--no-sandbox,--disable-setuid-sandbox,--disable-dev-shm-usage,--disable-accelerated-2d-canvas,--no-first-run,--no-zygote,--disable-gpu

# Telegram Bot (uncomment and configure if needed)
# TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
# TELEGRAM_CHAT_ID=your_chat_id_here

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_strong_redis_password_here

# Database Configuration (if needed)
# DB_HOST=your_db_host
# DB_PORT=5432
# DB_NAME=wa_bot
# DB_USER=wa_bot_user
# DB_PASS=your_db_password_here

# Security
# JWT_SECRET=your_jwt_secret_here_minimum_32_characters
# ENCRYPTION_KEY=your_encryption_key_here

# Logging
LOG_LEVEL=info
LOG_DIR=./logs

# Email notifications for Watchtower (optional)
EMAIL_FROM=noreply@your-domain.com
EMAIL_TO=admin@your-domain.com
EMAIL_SERVER=smtp.your-domain.com
EMAIL_PORT=587
EMAIL_USER=noreply@your-domain.com
EMAIL_PASSWORD=your_email_password

# Domain configuration
DOMAIN=your-domain.com
SUBDOMAIN=www

# SSL/TLS (when using Let's Encrypt)
# LETSENCRYPT_EMAIL=admin@your-domain.com

# Monitoring (if using external services)
# MONITORING_TOKEN=your_monitoring_token
# SENTRY_DSN=your_sentry_dsn

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100